<body>
<% include ../partial/header %>

<div class="row">
    <div class="container1">

        <div class="item">

            <h1 class="center"><span class="fa fa-sign-in"></span> Register</h1>


            <!-- LOGIN FORM -->
            <div class="border">
                <form action="/register" method="post">
                    <div class="form-group">
                        <label class="clear">Username</label>
                        <input type="text" class="form-control" name="username">
                    </div>
                    <div class="form-group">
                        <label class="clear">Email</label>
                        <input type="text" class="form-control" name="email">
                    </div>
                    <div class="form-group">
                        <label class="clear">Password</label>
                        <input type="password" class="form-control" name="password">
                    </div>
                    <br>
                    <button type="submit" class="button">Register</button>
                </form>
            </div>
            <hr>

            <p class="clear">Already have an account? <br><a href="/login" class="button">Login</a></p>
            <p class="clear">Or go <br><a href="/" class="button">Home</a></p>

        </div>

    </div>
</div>

<% include ../partial/footer %>
</body>
