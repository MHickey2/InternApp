<br>
                    <label for="deptId">dept Id:</label>
                    <input name="deptId" type="text" value="<%= users.deptId %>" />

                    <label for="catId">Cat Id:</label>
                    <input name="catId" type="text" value="<%= users.catId %>" />

                    <label for="FName">First Name:</label>
                    <input name="FName" type="text" value="<%= users.FName %>" />

                    <label for="LName">Last Name:</label>
                    <input name="LName" type="text" value="<%= users.LName %>" />

                    <label for="Description">Description:</label>
                    <input name="description" type="text" value="<%= users.Description %>" />

                    <label for="email">Email:</label>
                    <input name="email" type="text" value="<%= users.email %>" />

                    <label for="PhoneNo">Phone No:</label>
                    <input name="PhoneNo" type="text" value="<%= users.PhoneNo %>" />

                    <button class="button">Edit Contact</button>
                <br>
                    <br>
                </div>
            </form>
        <% }); %>
    </div>
</div>
