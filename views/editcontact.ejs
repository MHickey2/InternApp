    <h1 class="white">Update Contact Details</h1>
    <br>

    <div class="grid-container">
        <% res1.forEach(function(users) {%>
        <form accept-charset="UTF-8" action="/editcontact/<%= users.empId %>" method="post">
            <div class="item">


                    <label for="empId">emp Id:</label>
                    <input name="empId" type="text" value="<%= users.empId %>" />

                    <label for="image">Image:</label>
                    <input name="image" type="text" value="<%= users.image %>" />
