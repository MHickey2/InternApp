<body>
<% include ../partial/header %>

    <br>
    <br>
    <br>
   
              <div class="row">
    
                      <h2 class="center">Welcome to the Task List</h2>

                  <a href="/schedule" class="button">&nbspBack to Schedule</a>
    
                        <div class="grid-container">
                                <% tasks.forEach(function(tasks) { %>
                                        <div class="item2">     
                                            <div class="item">
                                                  <h3 class="itemtitle">Id: <%= tasks.id %></h3>
                                                  <h3 class="itemp">Type: <%= tasks.type %> </h3>
                                                  <h3 class="itemp">Priority: <%= tasks.priority %> </h3>
                                                  <h3 class="itemp">Description: <%= tasks.description %> </h3>
                                                  <h3 class="itemp">Time: <%= tasks.time %> </h3>
                                                  
                                                  
                                                  
                                                  
                                                  <a href="/taskupdate/<%= tasks.id %>" class="button">Update Task</a>
                                                  <a href="/deleteTask/<%= tasks.id %>" class="button">Delete Task</a><br><br>
                                                <a href="/onetask/<%= tasks.id %>"   class="button">View Task</a>
                                                  <br>
    <br>
    <br>                                    </div>
                                        </div>
                                <% }); %> 
                        </div>
                </div>
  
    <br>          
    <br>  
    <br>          
    <br>
    <br>          
    <br>  

    <% include ../partial/footer %>
</body>

